<%= simple_form_for([@post, @post.comments.build],
    url: blog_post_comments_path(post_id: @post.id)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
