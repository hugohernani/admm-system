<header class="navbar navbar-static-top navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Assembleia de Deus - Madureira", root_path, class: "navbar-brand" %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "My profile", root_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Blogs", blog_bloggers_path %></li>
        <li><%= link_to "Escola bíblica", root_path %></li>
        <li><%= link_to "Anúncios", root_path %></li>
        <li><%= link_to "Contato", root_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          </a>
          <ul class="dropdown-menu">
          </ul>
        </li>
        <% if !user_signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
          <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
            <form method="post" action="login" accept-charset="UTF-8">
              <input style="margin-bottom: 15px;" type="text" placeholder="Email" id="email" name="email">
              <input style="margin-bottom: 15px;" type="password" placeholder="Password" id="password" name="password">
              <input style="float: left; margin-right: 10px;" type="checkbox" name="remember-me" id="remember-me" value="1">
              <label class="string optional" for="user_remember_me"> Remember me</label>
              <input class="btn btn-primary btn-block" type="submit" id="sign-in" value="Sign In">
              <label class="text-center">or</label>
              <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(provider: :facebook), class: "btn btn-primary btn-block" %></li>
              <li><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(provider: :twitter), class: "btn btn-primary btn-block" %></li>
              <li><%= link_to "Sign in with Linkedin", user_omniauth_authorize_path(provider: :linked_in), class: "btn btn-primary btn-block" %></li>
              <br>
            </form>
          </div>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
