<!DOCTYPE html>
<html>
<head>
  <title>Admmsystem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= render 'layouts/main/header' %>
  <div id="sidebar">
		<ul>
			<li class="category">Navegação</li>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Seja um colaborador", root_path %></li>
      <li><%= link_to "Acompanhe-nos", root_path %></li>
			<li><%= link_to "Pedidos de oração", root_path %></li>
			<li><%= link_to "Galeria de fotos", root_path %></li>
      <li><%= link_to "Galeria de videos", root_path %></li>
      <li><%= link_to "Palavras do pastor", root_path %></li>
      <li><%= link_to "Mural de recados", root_path %></li>
      <li><%= link_to "Agenda", root_path %></li>
      <li><%= link_to "Nossos templos", root_path %></li>
      <li><%= link_to "Webrádio", root_path %></li>
		</ul>

		<ul>
			<li class="category">Redes sociais</li>
      <li><a href="https://www.facebook.com/profile.php?id=155748577910801">Facebook</a></li>
		</ul>

		<% if !user_signed_in? %>
      <ul>
        <li class="category">Login options</li>
        <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(provider: :facebook) %></li>
        <li><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(provider: :twitter) %></li>
        <li><%= link_to "Sign in with Linkedin", user_omniauth_authorize_path(provider: :linked_in) %></li>
      </ul>

			<p class="sign_in"><%= link_to "Login", new_user_session_path %></p>
		<% end %>
	</div>

  <div id="main_content">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= message %>
      </div>
    <% end %>
    <%= yield :header_content %>
    <%= yield %>
    <%= render 'layouts/main/footer' %>
  </div>
</body>
</html>
